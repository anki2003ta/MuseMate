<% layout("/layouts/boilerplate") -%>
<style>
  #filters{
    display: flex;
    flex-wrap:wrap;
    align-items: center;
  }
  .filter{
    text-align: center;
    margin-right: 2.5rem;
    margin-top: 2rem;
    opacity: 0.7;
  }
  .filter:hover{
    opacity: 1;
    cursor: pointer;
  }
  .filter a{
    text-decoration: none;
    color: #000;
  }
  .filter p{
    font-size: 0.8rem;
  }
  .weather{
    text-decoration: none;
    color: black;
  }
  .photo_slider{
    border-radius:10px;
  /*margin-left: 150px;*/
  width:100%;
  height: 100vh;
  background-color: black;
  display: flex;
  align-items: center;
  justify-content: center;
}
.slider{
	width:800px;
	height:500px;
	border-radius:10px;
	overflow:hidden;
}
.slides{
	width: 500%;
	height:500px;
	display:flex;
}
.slides input{
	display:none;
}
.slide{
	width:20%;
	transition:2s;
}
.slide img{
	width:1050px;
	height:500px;
}
.navigation-manual{
	position:absolute;
	width:800px;
	margin-top:-40px;
	display:flex;
	justify-content:center;
}
.manual-btn{
	border:2px solid #40D3DC;
	padding: 5px;
	border-radius:10px;
	cursor: pointer;
	transition:1s;
}
.manual-btn:not(:last-child){
	margin-right:40px;
}
.manual-btn:hover{
	background:#40D3DC;
}
#radio1:checked~.first{
	margin-left:0;
}
#radio2:checked~.first{
	margin-left:-20%;
}
#radio3:checked~.first{
	margin-left:-40%;
}
#radio4:checked~.first{
	margin-left:-60%;
}
.navigation-auto{
	position: absolute;
	display:flex;
	width:800px;
	justify-content:center;
	margin-top:460px;
}
.navigation-auto div{
	border:2px solid #40D3DC;
	padding:5px;
	border-radius: 10px;
	transition:1s;
}
.navigation-auto div:not(:last-child){
	margin-right:40px;
}
#radio1:checked~.navigation-auto .auto-btn1{
	background:#40D3DC;
}
#radio2:checked~.navigation-auto .auto-btn2{
	background:#40D3DC;
}
#radio3:checked~.navigation-auto .auto-btn3{
	background:#40D3DC;
}
#radio4:checked~.navigation-auto .auto-btn4{
	background:#40D3DC;
}
.bar {
  height: 50px; /* added height */
  
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 2.4rem;
  margin-left: 8px;
  font-weight: bold;
  color:rgb(238, 144, 22);
  border-radius: 10px;
  margin-top: 20px;
  margin-bottom: 20px;
  padding: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}
.h_bar {
  width: 100%;
  margin: 10px;
  border: 2px solid goldenrod; /* increased border width to make it more visible */
  border-color: goldenrod; /* changed border color to a darker shade */
}
.quiz{
  border: 1px solid black;
  padding: 1rem;
  border-radius: 1rem;
  font-size: small;
  margin-left:49.05rem ;
  display: flex;
  flex-direction: column; 
  align-items: center;
  background-color: rgb(241, 239, 235);
  border-color: black;
  justify-content: center;
  position: relative;
}
.quiz ul.dropdown {
  display: none; /* hide the dropdown by default */
  position: absolute; /* position the dropdown absolutely */
  top: 100%; /* position the dropdown below the .quiz div */
  left: 0; /* align the dropdown with the left edge of the .quiz div */
  background-color: #fff; /* add a background color to the dropdown */
  border: 1px solid #fcf9f9; /* add a border to the dropdown */
  padding: 10px; /* add some padding to the dropdown */
}
.quiz ul.dropdown li {
  display: block; /* display the list items as blocks */
  margin-bottom: 10px; /* add some margin between list items */
}
.quiz ul.dropdown li:last-child {
  margin-bottom: 0; /* remove the margin from the last list item */
}

.quiz:hover ul.dropdown {
  display: block; /* show the dropdown when the .quiz div is hovered */
}


</style>
<body>

